<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MovieTitle">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <!--<item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">10</item>-->
    </style>

    <style name="Poster">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="FavoriteImgBtn">
        <item name="android:background">@android:drawable/btn_star_big_off</item>
    </style>

    <style name="ReleaseYear" parent="TextLayout">
        <item name="android:textSize">@dimen/font_extra_large</item>
    </style>

    <style name="Runtime" parent="TextLayout">
        <item name="android:textSize">@dimen/font_very_large</item>
        <item name="android:textStyle">normal|italic</item>
    </style>

    <style name="VoteAvg" parent="TextLayout">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubHeading" parent="TextLayout">
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="SmallText" parent="TextLayout">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="LinkedText" parent="TextLayout">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">normal|italic</item>
    </style>

    <style name="TextLayout">
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Overview">
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    </style>
</resources>